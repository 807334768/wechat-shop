/* shoppingCart/index.wxss */
.shoppingList{
    position: relative;
}
.shoppingName{
    height: 85rpx;
    line-height:85rpx;
    text-indent:86rpx;

}
.shoppingOption{
 height:19vh;
padding-top:2.2vh;

}
.shoppingRight{
  
    width: 84%;
    position: absolute;
    right: 2%;
    height:18vh;
    
    overflow:hidden;
border-bottom: 1rpx solid #E6E6E6;
}
.shoppingSnapshot{
 border:1rpx solid #C0C0C0;
max-width:166rpx;
border-radius:12rpx;
max-height:166rpx;
float:left;
}
.shoppingPrice{
    width:52%;
   float:left;
   padding-left:4%;
}
.shoppingNum{
    float:right;
    width:31%;
    position:absolute;
    bottom:10%;
    right:0%;

}
.shoppingTitle{
font-size: 32rpx;
color: #1D2228;
display:inline-block;
margin-top:10rpx;

}
.shoppingNumbers{
font-size: 28rpx;
color: #7E838C;
position:relative;
top:-7rpx;

}
.shoppingP{
font-size: 32rpx;
color: #1D2228; 
display:block;
margin-top:8rpx;
}
.shoppingBtn{
border:1px solid #8F8F8F;
width:64rpx;
height:64rpx;
line-height:64rpx;
padding:0;
float:left;
font-size: 30rpx;
background:#ffffff;
}
.minus{
    border-radius:4rpx 0 0 4rpx;
    border-right:none;
}
.plus{
    border-radius:0 4rpx 4rpx 0;
    border-left:none;
}
.shoppingInput{
    display: inline;
    border:1px solid #8F8F8F;
    width:50rpx;
    height:60rpx;
    float:left;
    font-size:24rpx;
    text-align: center;
   
}