/* mine/index.wxss */
.bg{
     background: white;
    background-image: url('../images/bg.png');
    width: 100%;
    height: 30vh;
  background-size:cover;
  background-position: 30% 20%;
    background-repeat: no-repeat;
   
   
}
.touxiang{
    width: 3.1rem;
    height:3.1rem;
    border-radius:50%;
    border:2px solid #ffffff;
    box-shadow: 3px 3px 20px rgba(22,12,34,.5);
   display: block;
   margin: auto;
   margin-top:11%;
}
.userName{
    font-size: 40rpx;
    color:#ffffff;
   display: block;
   text-align: center;
    margin: auto;
    text-shadow: 1px 2px 3px rgba(215,215,215,.48)
}
.order{
    background:#ffffff;
    margin-bottom:1rem;
}
.line{   
    border-top:1rpx solid #E9E9E9 ;
    border-bottom:1rpx solid #E9E9E9 ;
    font-size:26rpx;
    height: 2.4rem;
    line-height:2.4rem;
    color:#1D2228;
    margin: auto;
    background: white;
    padding-left:3%; 
}
.floatRight{
    float:right;
    padding-right:3%;
}
.setting{
    width:4.5rem;
    height:1.9rem;
    border-radius:4.1rem;
    color:#ffffff;
    background:rgba(16,16,16,.48);
    border:1px solid rgba(215,215,215,.48);
    line-height:1.9rem;
    position: absolute;
    top:1.3rem;
    right:1.3rem;
}
.iconList{
    float: left;
    font-size:24rpx;
    color:#1D2228 ;
    width:25%;
    text-align: center;
    background: white;
    padding-top: 15px;
    padding-bottom:9px;
      border-bottom:1rpx solid #E9E9E9 ;
}

.icon{
    max-width:25%;
    min-width:15px;
    max-height: 22px;   
 display: block;
    margin: auto;
    margin-bottom:4px;
}
.iconSnapshot{
    width:4.3rem;
    height:3.6rem;
   float:left; 
}
.detailsSnapshot{
    width:60%;
   height:40px;
   padding-left:2%;
   margin-top:4.3%;
    float: left;
}
.orderList{
    border-bottom:1rpx solid #E9E9E9 ;
    background:#fafafa;
    overflow: hidden;
     padding:11px 3% 11px 0;   
}
.title{
    font-size:32rpx;
    height: 20px;
    color:#1D2228;
    display: block;
}
.weight{
   color: #7E838C ;
   font-size:24rpx;
    display: block;
}
.number{
    font-size:28rpx;
    color: #1D2228;
    margin-top:5%;
    margin-right:3%;
    float:right;
}
.orderOperator{
    
   padding-top:3%;
 padding-bottom:3%;
    background: #ffffff;
    vertical-align: middle;
}
.count{
    margin-left:4%;
    font-size:26rpx;
    line-height:2.36;
}
.cancle{
    padding:0;
